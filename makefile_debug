SHELL=/bin/bash

CC=g++
LD=g++


CFLAGS=-Wall -g -O0 -D MAP -fPIC
LDFLAGS=-lm


EXEC=main
SRC=$(wildcard *.cpp)
OBJECTS=$(SRC:.cpp=.o)

PHONY: target clean

target:$(EXEC)

%.o: %.cpp %.h
	$(CC) -o $@ -c $< $(CFLAGS)

$(EXEC): $(OBJECTS)
	$(LD) -o $(EXEC) $(OBJECTS) $(LDFLAGS)
	
clean:
	rm -f *.o core

